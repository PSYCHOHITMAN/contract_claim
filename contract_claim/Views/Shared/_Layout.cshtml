<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Claim</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>

        /* -----------------------------------
               THEME COLOR VARIABLES
               (Everything in the site uses these)
            ----------------------------------- */
        :root {
            --bg: #ffffff;
            --text: #212529;
            --card-bg: #ffffff;
            --card-border: rgba(0, 0, 0, 0.08);
            --card-shadow: rgba(0, 0, 0, 0.12);
            --table-bg: #ffffff;
            --table-text: #212529;
            --table-border: rgba(0, 0, 0, 0.15);
            --input-bg: #ffffff;
            --input-border: rgba(0, 0, 0, 0.20);
            --input-text: #212529;
            --hero-bg: linear-gradient(135deg, #0d6efd, #1e90ff);
            --hero-text: #ffffff;
            --nav-bg-light: rgba(255,255,255,0.18);
            --nav-border-light: rgba(255,255,255,0.35);
            --nav-text-light: #212529;
            --nav-hover: rgba(255,255,255,0.35);
        }

        /* -------------------------
               DARK MODE VALUES
            -------------------------- */
        [data-theme="dark"] {
            --bg: #121212;
            --text: #e9ecef;
            --card-bg: rgba(255,255,255,0.06);
            --card-border: rgba(255,255,255,0.12);
            --card-shadow: rgba(0, 0, 0, 0.55);
            --table-bg: rgba(255,255,255,0.05);
            --table-text: #f1f1f1;
            --table-border: rgba(255,255,255,0.12);
            --input-bg: rgba(255,255,255,0.08);
            --input-border: rgba(255,255,255,0.18);
            --input-text: #f8f9fa;
            --hero-bg: linear-gradient(135deg, #0a58ca, #0d6efd);
            --hero-text: #e9ecef;
            --nav-bg-light: rgba(20,20,20,0.45);
            --nav-border-light: rgba(255,255,255,0.12);
            --nav-text-light: #e9ecef;
            --nav-hover: rgba(255,255,255,0.25);
        }

        /* -----------------------------------
               GLOBAL BODY STYLES
            ----------------------------------- */
        body {
            background: var(--bg);
            color: var(--text);
            padding-top: 72px;
            transition: background .25s ease, color .25s ease;
        }

        /* -----------------------------------
               NAVBAR (Glassmorphism)
            ----------------------------------- */
        .navbar-glass {
            background: var(--nav-bg-light);
            backdrop-filter: blur(14px);
            -webkit-backdrop-filter: blur(14px);
            border-bottom: 1px solid var(--nav-border-light);
            border-radius: 0 0 18px 18px;
            box-shadow: 0 6px 26px var(--card-shadow);
            transition: background .25s, border .25s, box-shadow .25s;
        }

        .navbar .nav-link {
            background: rgba(255,255,255,0.15);
            border: 1px solid var(--nav-border-light);
            border-radius: 12px;
            color: var(--nav-text-light) !important;
            margin-left: 8px;
            padding: 6px 14px;
            font-weight: 500;
            transition: .22s;
        }

            .navbar .nav-link:hover {
                background: var(--nav-hover);
            }

            .navbar .nav-link.active {
                background: rgba(13,110,253,0.9);
                border-color: #0d6efd;
                color: white !important;
            }

        .nav-text {
            background: rgba(255,255,255,0.15);
            border: 1px solid var(--nav-border-light);
            padding: 6px 12px;
            border-radius: 12px;
            margin-right: 6px;
            color: var(--nav-text-light);
        }

        /* Toggle Button */
        #themeToggle {
            background: rgba(255,255,255,0.12);
            border: 1px solid var(--nav-border-light);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: var(--nav-text-light);
            cursor: pointer;
            transition: .2s;
        }

            #themeToggle:hover {
                background: var(--nav-hover);
            }

        /* -----------------------------
               GLOBAL CARDS (ALL DASHBOARDS)
            ------------------------------ */
        .card,
        .stat-card,
        .glass-card {
            background: var(--card-bg) !important;
            border: 1px solid var(--card-border) !important;
            box-shadow: 0 4px 18px var(--card-shadow) !important;
            border-radius: 16px !important;
            transition: background .25s, color .25s, border .25s;
            color: var(--text);
        }

        /* -----------------------------
               FORMS + INPUTS
            ------------------------------ */
        input, select, textarea {
            background: var(--input-bg) !important;
            color: var(--input-text) !important;
            border: 1px solid var(--input-border) !important;
        }

            input:focus, select:focus, textarea:focus {
                outline: none !important;
                border-color: #0d6efd !important;
                box-shadow: 0 0 0 3px rgba(13,110,253,0.35) !important;
            }

        /* -----------------------------
               TABLES
            ------------------------------ */
        table {
            background: var(--table-bg) !important;
            color: var(--table-text) !important;
        }

            table th, table td {
                border-color: var(--table-border) !important;
            }

        thead.table-dark {
            background: rgba(0,0,0,0.35) !important;
            color: #fff !important;
        }

        [data-theme="dark"] thead.table-dark {
            background: rgba(255,255,255,0.1) !important;
        }

        /* -----------------------------
               HERO / BANNERS
            ------------------------------ */
        .hero-section {
            background: var(--hero-bg);
            color: var(--hero-text);
            padding: 50px;
            border-radius: 22px;
            box-shadow: 0 8px 28px var(--card-shadow);
            transition: background .25s ease;
        }

    </style>
</head>

<body>
    @* ------------------------------
       SESSION & NAV LOGIC
    ------------------------------- *@
    @{
        var isAuthenticated = Context.Session.GetString("Username") != null;
        var username = Context.Session.GetString("Username") ?? "";
        var role = Context.Session.GetString("Role") ?? "";

        string backUrl = Url.Action("Login", "Account");
        if (role == "Lecturer") backUrl = Url.Action("Index", "Lecturer");
        else if (role == "Coordinator") backUrl = Url.Action("Index", "Coordinator");
        else if (role == "Manager") backUrl = Url.Action("Index", "Manager");
        else if (role == "HR") backUrl = Url.Action("Index", "HR");

        var controller = ViewContext.RouteData.Values["controller"]?.ToString();
        var action = ViewContext.RouteData.Values["action"]?.ToString();

        Func<string, string, string> isActive = (c, a) =>
        {
            bool matchController = string.Equals(controller, c, StringComparison.OrdinalIgnoreCase);
            bool matchAction = string.IsNullOrEmpty(a) || string.Equals(action, a, StringComparison.OrdinalIgnoreCase);
            return (matchController && matchAction) ? "active" : "";
        };
    }

    <!-- NAVIGATION -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow-sm">
        <nav class="navbar navbar-expand-lg fixed-top navbar-glass">
            <div class="container">
                <a class="navbar-brand fw-bold" href="/">CMCS</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topnav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="topnav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto align-items-center">

                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-text">Hello, @username</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(isActive(role, "Index"))" href="@backUrl">Home</a>
                            </li>

                            @if (role == "Lecturer")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(isActive("Lecturer","SubmitClaim"))" href="/Lecturer/SubmitClaim">Submit Claim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(isActive("Lecturer","TrackClaims"))" href="/Lecturer/TrackClaims">Track Claims</a>
                                </li>
                            }
                            else if (role == "Coordinator")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(isActive("Coordinator","ClaimsList"))" href="/Coordinator/ClaimsList">Claims List</a>
                                </li>
                            }
                            else if (role == "Manager")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(isActive("Manager","ClaimsList"))" href="/Manager/ClaimsList">Claims List</a>
                                </li>
                            }
                            else if (role == "HR")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(isActive("HR","Index"))" href="/HR/Index">HR Dashboard</a>
                                </li>
                            }

                            <li class="nav-item">
                                <button id="themeToggle">
                                    <i id="themeIcon" class="bi bi-brightness-high-fill"></i>
                                </button>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link logout" href="/Account/Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

    <script>
        /* -------------------------------
           DARK / LIGHT MODE SWITCH
        -------------------------------- */
        const html = document.documentElement;
        const toggleBtn = document.getElementById("themeToggle");
        const icon = document.getElementById("themeIcon");

        // Load saved theme
        const saved = localStorage.getItem("theme");
        if (saved) html.setAttribute("data-theme", saved);

        function updateIcon() {
            if (html.getAttribute("data-theme") === "dark") {
                icon.className = "bi bi-moon-stars-fill";
            } else {
                icon.className = "bi bi-brightness-high-fill";
            }
        }
        updateIcon();

        toggleBtn.addEventListener("click", () => {
            let current = html.getAttribute("data-theme");
            let next = current === "dark" ? "light" : "dark";
            html.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);
            updateIcon();
        });
    </script>
</body>
</html>