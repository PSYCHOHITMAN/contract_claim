@{
    ViewData["Title"] = "Login";
}

<div class="form-card">
    <h2>CMCS</h2>
    <small>Contract Monthly Claim System</small>

    <ul class="nav nav-tabs justify-content-center mt-3 mb-4">
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/Account/Login">Sign In</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/Account/Register">Register</a>
        </li>
    </ul>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post" asp-action="Login">
        <div class="mb-3 text-start">
            <label class="form-label">Email</label>
            <input type="email" name="username" class="form-control" placeholder="your.email@example.com" required />
        </div>
        <div class="mb-3 text-start">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Sign In</button>
    </form>

    <p class="mt-3">
        <a href="/" class="text-decoration-none">Back to Home</a>
    </p>
</div>
