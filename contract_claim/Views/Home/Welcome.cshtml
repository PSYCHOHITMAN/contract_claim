@{
    ViewData["Title"] = "Welcome to CMCS";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<!-- Glassmorphism & Styling -->
<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.25);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border-radius: 22px;
        padding: 28px;
        border: 1px solid rgba(255, 255, 255, 0.35);
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: all 0.35s ease;
        position: relative;
        overflow: hidden;
    }
        .glass-card::before {
            content: "";
            position: absolute;
            top: -40%;
            left: -40%;
            width: 120%;
            height: 120%;
            background: radial-gradient( circle at top left, rgba(255,255,255,0.35), transparent 70% );
            opacity: 0.2;
            pointer-events: none;
            transition: opacity 0.4s ease;
        }

        .glass-card:hover {
            transform: translateY(-6px) scale(1.015);
            box-shadow: 0 12px 28px rgba(0,0,0,0.12), 0 8px 12px rgba(0,0,0,0.08), 0 0 18px rgba(0,150,255,0.20);
            backdrop-filter: blur(15px);
        }

            .glass-card:hover::before {
                opacity: 0.35;
            }

    .hero-gradient {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border-radius: 25px;
        color: white;
    }

    .role-icon {
        font-size: 35px;
        margin-bottom: 10px;
        opacity: 0.85;
    }

    .section-title {
        font-weight: 700;
        font-size: 1.8rem;
    }
</style>

<div class="container mt-5">

    <!-- HERO SECTION -->
    <div class="hero-gradient p-5 text-center shadow-lg mb-5">
        <h1 class="display-5 fw-bold mb-3">Contract Monthly Claim System (CMCS)</h1>
        <p class="lead">
            A fast and efficient platform for lecturers, coordinators, managers, and HR to manage monthly claim submissions and approvals.
        </p>

        <div class="mt-4 d-flex justify-content-center gap-3">
            <a href="/Account/Login" class="btn btn-light btn-lg rounded-pill px-5 shadow-sm fw-semibold">
                <i class="bi bi-box-arrow-in-right me-2"></i> Login
            </a>
            <a href="/Account/Register" class="btn btn-outline-light btn-lg rounded-pill px-5 shadow-sm fw-semibold">
                <i class="bi bi-person-plus me-2"></i> Register
            </a>
        </div>
    </div>

    <!-- Roles Section -->
    <div class="text-center mb-4">
        <h2 class="section-title text-dark mb-3">Roles & Responsibilities</h2>
        <p class="text-muted">Learn what each role can do on the CMCS platform.</p>
    </div>

    <div class="row justify-content-center g-4">

        <!-- Lecturers -->
        <div class="col-md-3">
            <div class="glass-card text-center shadow-sm">
                <i class="bi bi-journal-text text-primary role-icon"></i>
                <h5 class="text-primary fw-bold">Lecturers</h5>
                <p class="text-secondary">
                    Submit monthly claims, upload documents, and track approval status.
                </p>
            </div>
        </div>

        <!-- Coordinators -->
        <div class="col-md-3">
            <div class="glass-card text-center shadow-sm">
                <i class="bi bi-clipboard-check text-success role-icon"></i>
                <h5 class="text-success fw-bold">Coordinators</h5>
                <p class="text-secondary">
                    Review, approve, or reject claims from lecturers in their department.
                </p>
            </div>
        </div>

        <!-- Academic Managers -->
        <div class="col-md-3">
            <div class="glass-card text-center shadow-sm">
                <i class="bi bi-mortarboard text-danger role-icon"></i>
                <h5 class="text-danger fw-bold">Academic Managers</h5>
                <p class="text-secondary">
                    Oversee the approval process and monitor institution-wide submissions.
                </p>
            </div>
        </div>

        <!-- HR -->
        <div class="col-md-3">
            <div class="glass-card text-center shadow-sm">
                <i class="bi bi-people-fill text-info role-icon"></i>
                <h5 class="text-info fw-bold">Human Resources (HR)</h5>
                <p class="text-secondary">
                    Manage payroll, analyze claim data, and ensure accurate processing of approved claims.
                </p>
            </div>
        </div>

    </div>

</div>
