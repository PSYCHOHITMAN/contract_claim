@{
    ViewData["Title"] = "Welcome to CMCS";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg p-5 border-0 rounded-4">
        <h1 class="display-5 fw-bold text-primary mb-4">Contract Monthly Claim System (CMCS)</h1>
        <p class="lead text-secondary mb-4">
            The CMCS is designed for Independent Contractor (IC) lecturers to submit and track their monthly work claims.
            Coordinators and Managers can easily review, approve, or reject claims.
        </p>

        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="d-grid gap-3">
                    <a href="/Account/Login" class="btn btn-primary btn-lg rounded-pill shadow-sm">Login</a>
                    <a href="/Account/Register" class="btn btn-outline-secondary btn-lg rounded-pill shadow-sm">Register</a>
                </div>
            </div>
        </div>

        <hr class="my-5">

        <div class="mt-4">
            <h5 class="text-muted mb-3">Roles & Responsibilities:</h5>
            <div class="row justify-content-center">
                <div class="col-md-4 mb-3">
                    <div class="border p-3 rounded shadow-sm">
                        <h6 class="text-primary fw-bold">Lecturers</h6>
                        <p>Submit monthly claims, upload supporting documents, and track approval status.</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="border p-3 rounded shadow-sm">
                        <h6 class="text-success fw-bold">Coordinators</h6>
                        <p>Review, approve, or reject claims submitted by lecturers under their department.</p>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="border p-3 rounded shadow-sm">
                        <h6 class="text-danger fw-bold">Academic Managers</h6>
                        <p>Oversee the approval process and maintain oversight of all submitted claims.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
