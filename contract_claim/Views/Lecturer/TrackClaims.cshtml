@model List<contract_claim.Models.Claim>
@{
    ViewData["Title"] = "TrackClaims";
}

<h2 class="mb-4">My Claims</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <p>No claims submitted yet.</p>
}
else
{
    <div class="d-flex justify-content-between mb-3">
        <p class="text-muted">Below are the claims you’ve submitted.</p>
        <form method="post" asp-action="ClearClaims" onsubmit="return confirm('Are you sure you want to clear all your claims?');">
            <button type="submit" class="btn btn-danger btn-sm">🗑 Clear All Claims</button>
        </form>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Hours Worked</th>
                <th>Hourly Rate</th>
                <th>Total Amount</th>
                <th>Notes</th>
                <th>Document</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.TotalAmount</td>
                    <td>@claim.Notes</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.FileName))
                        {
                            <a href="/uploads/@claim.FileName" target="_blank">@claim.FileName</a>
                        }
                        else
                        {
                            <span>N/A</span>
                        }
                    </td>
                    <td>
                        @if (claim.Status == "Pending")
                        {
                            <span class="badge bg-warning text-dark">Pending Review</span>
                        }
                        else if (claim.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>
                        <form method="post" asp-action="DeleteClaim" onsubmit="return confirm('Are you sure you want to delete this claim?');">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
