@model List<contract_claim.Models.User>

@{
    ViewData["Title"] = "Manage Lecturers";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .page-title {
        font-weight: 700;
        font-size: 2rem;
    }

    .intro-text {
        max-width: 700px;
        opacity: 0.85;
    }

    .glass-box {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(14px);
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 12px 32px rgba(0,0,0,0.1);
        border: 1px solid rgba(255,255,255,0.5);
    }

    .table-container {
        overflow: hidden;
        border-radius: 18px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.12);
    }

    .table thead {
        background: #0d6efd;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: .06em;
    }

    .table tbody tr:hover {
        background: rgba(13,110,253,0.07);
        cursor: pointer;
    }

    .btn-rounded {
        border-radius: 50px;
        padding: 6px 20px;
        transition: 0.2s;
    }

        .btn-rounded:hover {
            transform: translateY(-2px);
        }
</style>

<div class="container mt-5 mb-5">

    <!-- HEADER -->
    <div class="glass-box mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="page-title mb-2">
                    <i class="bi bi-people-fill text-primary"></i> Manage Lecturers
                </h2>
                <p class="intro-text text-muted">
                    Add, update, or remove independent-contract lecturers registered on the CMCS platform.
                </p>
            </div>

            <!-- ADD LECTURER BUTTON -->
            <button class="btn btn-primary btn-rounded"
                    data-bs-toggle="modal"
                    data-bs-target="#addLecturerModal">
                <i class="bi bi-person-plus"></i> Add Lecturer
            </button>
        </div>
    </div>

    <!-- LECTURERS TABLE -->
    <div class="table-container glass-box">

        @if (Model == null || !Model.Any())
        {
            <div class="p-5 text-center text-muted">
                <i class="bi bi-person-x fs-1"></i>
                <p class="mt-3">No lecturers found.</p>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@u.Username</td>
                            <td>@u.Email</td>
                            <td>@u.Role</td>

                            <td class="text-center">

                                <!-- PAYROLL -->
                                <a href="/HR/Slip?email=@u.Email"
                                   class="btn btn-outline-primary btn-sm btn-rounded me-1">
                                    <i class="bi bi-file-earmark"></i>
                                </a>

                                <!-- EDIT -->
                                <a href="/HR/EditLecturer/@u.Id"
                                   class="btn btn-outline-warning btn-sm btn-rounded me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- DELETE -->
                                <form method="post"
                                      action="/HR/DeleteLecturer"
                                      class="d-inline"
                                      onsubmit="return confirm('Delete @u.Username?');">

                                    <input type="hidden" name="id" value="@u.Id" />

                                    <button type="submit" class="btn btn-outline-danger btn-sm btn-rounded">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

<!-- ADD LECTURER MODAL -->
<div class="modal fade" id="addLecturerModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content glass-box">
            <div class="modal-header">
                <h5 class="modal-title">Add New Lecturer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form method="post" action="/HR/AddLecturer">
                <div class="modal-body">

                    <label class="form-label">Full Name</label>
                    <input type="text" name="Username" class="form-control mb-3" required />

                    <label class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control mb-3" required />

                    <label class="form-label">Hourly Rate (optional)</label>
                    <input type="number" name="Rate" class="form-control mb-3" step="0.01" />

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary btn-rounded" data-bs-dismiss="modal">Cancel</button>
                    <button class="btn btn-primary btn-rounded">Add Lecturer</button>
                </div>
            </form>
        </div>
    </div>
</div>