@model List<contract_claim.Models.User>

@{
    ViewData["Title"] = "Manage Lecturers";

    string displayName = User?.Identity?.Name ?? "HR";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .page-title {
        font-weight: 700;
        font-size: 2rem;
    }

    .intro-text {
        max-width: 700px;
        opacity: 0.85;
    }

    .glass-box {
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(14px);
        border-radius: 16px;
        padding: 25px;
        box-shadow: 0 12px 32px rgba(0,0,0,0.1);
        border: 1px solid rgba(255,255,255,0.5);
    }

    .table-container {
        overflow: hidden;
        border-radius: 18px;
        box-shadow: 0 10px 28px rgba(0,0,0,0.12);
    }

    .table thead {
        background: #0d6efd;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: .06em;
    }

    .table tbody tr {
        transition: 0.2s ease;
    }

        .table tbody tr:hover {
            background: rgba(13, 110, 253, 0.06);
            cursor: pointer;
        }

    .action-btn {
        border-radius: 50px;
        padding: 5px 18px;
        transition: 0.2s ease;
    }

        .action-btn:hover {
            transform: translateY(-3px);
        }

    .empty-box {
        text-align: center;
        padding: 40px;
        color: #777;
        font-size: 1.1rem;
    }

</style>

<div class="container mt-5 mb-5">

    <!-- PAGE HEADER -->
    <div class="glass-box mb-4">
        <h2 class="page-title mb-2">
            <i class="bi bi-people-fill text-primary"></i> Manage Lecturers
        </h2>

        <p class="intro-text text-muted">
            View all registered independent-contract (IC) lecturers on the CMCS platform.
            From here, you can quickly access each lecturer’s payroll slip, review their claims,
            or check their submission activity.
        </p>
    </div>

    <!-- LECTURERS TABLE -->
    <div class="table-container glass-box">

        @if (Model == null || !Model.Any())
        {
            <div class="empty-box">
                <i class="bi bi-person-x fs-1 text-secondary"></i>
                <p class="mt-3">No lecturers found in the system.</p>
            </div>
        }
        else
        {
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th><i class="bi bi-person-badge"></i> Name</th>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th class="text-center"><i class="bi bi-gear"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@u.Username</td>
                            <td>@u.Email</td>
                            <td class="text-center">
                                <a href="/HR/Slip?email=@u.Email"
                                   class="btn btn-outline-primary btn-sm action-btn">
                                    <i class="bi bi-file-earmark-pdf"></i> Payroll Slip
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

</div>
