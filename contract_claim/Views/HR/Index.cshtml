@model List<contract_claim.Models.Claim>
@{
    ViewData["Title"] = "HR Dashboard";
}

<h2 class="mb-4">HR Dashboard</h2>

<div class="row text-center mb-4">
    <div class="col-md-3">
        <div class="p-3 bg-success text-white rounded shadow-sm">
            <h5>Total Approved Claims</h5>
            <h3>@ViewBag.TotalApprovedCount</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="p-3 bg-info text-dark rounded shadow-sm">
            <h5>Total Payout Amount</h5>
            <h3>R @ViewBag.TotalApprovedAmount</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="p-3 bg-warning text-dark rounded shadow-sm">
            <h5>Pending Claims</h5>
            <h3>@ViewBag.PendingCount</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="p-3 bg-danger text-white rounded shadow-sm">
            <h5>Rejected Claims</h5>
            <h3>@ViewBag.RejectedCount</h3>
        </div>
    </div>
</div>

<div class="mb-3">
    <a class="btn btn-outline-primary" asp-action="ExportApproved">📥 Download Payroll (CSV)</a>
</div>

<table class="table table-striped table-hover shadow-sm mt-4">
    <thead class="table-dark">
        <tr>
            <th>Lecturer</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Status</th>
            <th>Approved By</th>
            <th>Approved Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalAmount</td>
                <td>
                    <span class="fw-bold @(claim.Status == "Approved" ? "text-success" :
                                             claim.Status == "Pending" ? "text-warning" : "text-danger")">
                        @claim.Status
                    </span>
                </td>
                <td>@claim.ApprovedBy</td>
                <td>@claim.ApprovedDate?.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>
