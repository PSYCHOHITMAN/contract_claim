@model List<contract_claim.Models.Claim>

@{
    ViewData["Title"] = "HR Dashboard";

    // Get the logged-in user’s name safely
    string displayName = User?.Identity?.Name ?? "HR";
}

<h2 class="mb-2">
    Welcome, @displayName 👋
</h2>

<p class="text-muted">Contract Monthly Claim System</p>

<!-- Bootstrap Icons -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    /* ---------- GLASS + LAYOUT ---------- */

    .hero-glass {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        border-radius: 24px;
        color: #fff;
        padding: 32px 40px;
        box-shadow: 0 18px 45px rgba(0, 0, 0, 0.18);
        position: relative;
        overflow: hidden;
    }

        .hero-glass::after {
            content: "";
            position: absolute;
            right: -60px;
            top: -60px;
            width: 180px;
            height: 180px;
            background: rgba(255, 255, 255, 0.18);
            filter: blur(4px);
            border-radius: 50%;
        }

    .hero-subtitle {
        opacity: 0.9;
        max-width: 640px;
        margin: 0 auto;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 18px;
        padding: 20px 22px;
        border: 1px solid rgba(255, 255, 255, 0.6);
        box-shadow: 0 10px 26px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 40px rgba(0, 0, 0, 0.18);
        }

    .stat-label {
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        opacity: 0.85;
    }

    .stat-value {
        font-size: 2.1rem;
        font-weight: 700;
        margin-top: 6px;
    }

    .quick-actions .btn {
        border-radius: 999px;
        padding: 0.7rem 1.8rem;
        font-weight: 500;
    }

        .quick-actions .btn i {
            margin-right: 0.4rem;
        }

    .table-wrapper {
        background: #ffffff;
        border-radius: 18px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 20px 24px;
    }

    .table thead th {
        border-bottom-width: 0;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
    }

    .table tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.03);
    }
</style>

<div class="container mt-5 mb-5">

    <!-- HERO / WELCOME -->
    <div class="hero-glass mb-5 text-center">
        <h1 class="fw-bold mb-2">Welcome back, @displayName 👋</h1>
        <p class="hero-subtitle">
            This HR dashboard gives you a live snapshot of <strong>lecturer claims</strong>,
            <strong>payouts</strong>, and <strong>approval activity</strong> across the CMCS platform.
            Review the overview below, then jump straight into payroll, lecturer management, or analytics.
        </p>
    </div>

    <!-- STATS ROW -->
    <div class="row g-4 mb-4">

        <div class="col-md-4">
            <div class="glass-card h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                             style="width: 42px; height: 42px;">
                            <i class="bi bi-people-fill"></i>
                        </div>
                    </div>
                    <div>
                        <div class="stat-label text-primary">Total Lecturers</div>
                        <div class="stat-value text-dark">@ViewBag.TotalLecturers</div>
                        <small class="text-muted">Active IC lecturers on the CMCS system.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="glass-card h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center"
                             style="width: 42px; height: 42px;">
                            <i class="bi bi-check2-circle"></i>
                        </div>
                    </div>
                    <div>
                        <div class="stat-label text-success">Approved Claims</div>
                        <div class="stat-value text-dark">@ViewBag.TotalApproved</div>
                        <small class="text-muted">Claims successfully approved and ready for payroll.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="glass-card h-100">
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <div class="rounded-circle bg-warning text-dark d-flex align-items-center justify-content-center"
                             style="width: 42px; height: 42px;">
                            <i class="bi bi-cash-coin"></i>
                        </div>
                    </div>
                    <div>
                        <div class="stat-label text-warning">Total Payout</div>
                        <div class="stat-value text-dark">R @ViewBag.TotalPayout</div>
                        <small class="text-muted">Total amount to be paid out for approved claims.</small>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- QUICK ACTIONS -->
    <div class="quick-actions text-center mb-5">
        <p class="text-muted mb-3">
            What would you like to do next?
        </p>
        <div class="d-flex flex-wrap justify-content-center gap-3">
            <a href="/HR/Payroll" class="btn btn-primary">
                <i class="bi bi-receipt"></i> Go to Payroll
            </a>
            <a href="/HR/Lecturers" class="btn btn-outline-secondary">
                <i class="bi bi-person-badge"></i> Manage Lecturers
            </a>
            <a href="/HR/Analytics" class="btn btn-outline-info">
                <i class="bi bi-graph-up-arrow"></i> View Analytics
            </a>
            <a asp-action="ExportApproved" class="btn btn-outline-success">
                <i class="bi bi-download"></i> Download Payroll (CSV)
            </a>
        </div>
    </div>

    <!-- RECENT CLAIMS TABLE -->
    <div class="table-wrapper">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">Recent Approved Claims</h4>
            <small class="text-muted">
                A quick look at the latest processed claims.
            </small>
        </div>

        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Lecturer</th>
                    <th class="text-center">Hours</th>
                    <th class="text-center">Rate</th>
                    <th class="text-center">Total</th>
                    <th>Status</th>
                    <th>Approved By</th>
                    <th>Approved Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted py-4">
                            No claims to display yet. Once claims are approved, they will appear here.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td class="text-center">@claim.HoursWorked</td>
                            <td class="text-center">@claim.HourlyRate</td>
                            <td class="text-center">R @claim.TotalAmount</td>
                            <td>
                                <span class="fw-semibold @(claim.Status == "Approved"
                                    ? "text-success"
                                    : claim.Status == "Pending"
                                        ? "text-warning"
                                        : "text-danger")">
                                    @claim.Status
                                </span>
                            </td>
                            <td>@claim.ApprovedBy</td>
                            <td>@claim.ApprovedDate?.ToString("yyyy-MM-dd HH:mm")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>