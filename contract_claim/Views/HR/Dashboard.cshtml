<h2>Welcome, HR</h2>
<p class="text-muted">Contract Monthly Claim System</p>

<div class="row mt-4">

    <div class="col-md-4">
        <div class="p-3 bg-primary text-white text-center rounded shadow">
            <h4>Total Lecturers</h4>
            <h2>@ViewBag.TotalLecturers</h2>
        </div>
    </div>

    <div class="col-md-4">
        <div class="p-3 bg-success text-white text-center rounded shadow">
            <h4>Approved Claims</h4>
            <h2>@ViewBag.TotalApproved</h2>
        </div>
    </div>

    <div class="col-md-4">
        <div class="p-3 bg-warning text-white text-center rounded shadow">
            <h4>Total Payout</h4>
            <h2>R @ViewBag.TotalPayout</h2>
        </div>
    </div>

</div>

<hr />

<div class="text-center mt-4">
    <a href="/HR/Payroll" class="btn btn-outline-primary btn-lg">Go to Payroll</a>
    <a href="/HR/Lecturers" class="btn btn-outline-secondary btn-lg ms-3">Manage Lecturers</a>
    <a href="/HR/Analytics" class="btn btn-outline-info btn-lg ms-3">Analytics</a>
</div>
