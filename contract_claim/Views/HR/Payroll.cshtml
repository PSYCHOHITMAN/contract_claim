@model List<contract_claim.Models.Claim>

@{
    ViewData["Title"] = "Payroll Summary";
}

<!-- BOOTSTRAP ICONS -->
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

<style>
    .hero-glass {
        background: linear-gradient(135deg, #007bff, #00c6ff);
        color: white;
        padding: 32px 40px;
        border-radius: 22px;
        box-shadow: 0 20px 45px rgba(0,0,0,0.15);
        margin-bottom: 35px;
        position: relative;
        overflow: hidden;
    }

        .hero-glass::after {
            content: "";
            position: absolute;
            right: -50px;
            top: -50px;
            width: 160px;
            height: 160px;
            background: rgba(255, 255, 255, 0.18);
            filter: blur(4px);
            border-radius: 50%;
        }

    .glass-card {
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(14px);
        border-radius: 18px;
        padding: 20px;
        border: 1px solid rgba(255,255,255,0.6);
        box-shadow: 0 10px 26px rgba(0,0,0,0.08);
        transition: 0.2s ease;
    }

        .glass-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 18px 45px rgba(0,0,0,0.15);
        }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .table-wrapper {
        background: white;
        border-radius: 18px;
        padding: 20px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        margin-top: 25px;
    }
</style>


<div class="container mt-4 mb-5">

    <!-- HERO HEADER -->
    <div class="hero-glass text-center">
        <h1 class="fw-bold">Payroll Summary</h1>
        <p class="mb-0">
            Select a <strong>year</strong> and <strong>month</strong> to generate a detailed breakdown
            of all approved lecturer claims for payroll processing.
        </p>
    </div>

    <!-- FILTER FORM -->
    <div class="glass-card mb-4">
        <form method="post">
            <div class="row g-4">

                <!-- YEAR -->
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="bi bi-calendar3"></i> Year
                    </label>
                    <input type="number" name="year" class="form-control" required min="2020" max="2100" />
                </div>

                <!-- MONTH -->
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="bi bi-calendar-event"></i> Month (1–12)
                    </label>
                    <input type="number" name="month" class="form-control" required min="1" max="12" />
                </div>

                <!-- BUTTON -->
                <div class="col-md-4 d-flex align-items-end">
                    <button class="btn btn-primary w-100 rounded-pill">
                        <i class="bi bi-search"></i> Load Payroll
                    </button>
                </div>

            </div>
        </form>
    </div>


    <!-- RESULTS -->
    @if (Model != null)
    {
        <div class="table-wrapper">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="fw-bold">
                    <i class="bi bi-receipt-cutoff text-primary"></i>
                    Approved Payroll for @ViewBag.Month/@ViewBag.Year
                </h4>

                <h5 class="text-success fw-bold">
                    Total Payout: R @ViewBag.Total
                </h5>
            </div>

            <!-- PAYROLL TABLE -->
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th class="text-center">Hours</th>
                        <th class="text-center">Rate</th>
                        <th class="text-center">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.LecturerName</td>
                            <td class="text-center">@c.HoursWorked</td>
                            <td class="text-center">R @c.HourlyRate</td>
                            <td class="text-center fw-bold">R @c.TotalAmount</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3">
                <a href="/HR/ExportPayrollPdf?year=@ViewBag.Year&month=@ViewBag.Month"
                   class="btn btn-danger rounded-pill">
                    <i class="bi bi-file-earmark-pdf"></i> Download PDF
                </a>
            </div>
        </div>
    }

    @if (Model == null)
    {
        <div class="text-center text-muted mt-5">
            <i class="bi bi-info-circle" style="font-size: 2rem;"></i>
            <p class="mt-2">
                No payroll data loaded yet — choose a year and month above.
            </p>
        </div>
    }

</div>