@{
    ViewData["Title"] = "Coordinator Dashboard";
    var username = Context.Session.GetString("Username") ?? "Coordinator";
}

<style>
    .hero-glass {
        background: linear-gradient(135deg, #00b4d8, #0096c7);
        padding: 40px;
        border-radius: 24px;
        color: white;
        text-align: center;
        box-shadow: 0 20px 45px rgba(0,0,0,0.15);
        margin-bottom: 50px;
        position: relative;
        overflow: hidden;
    }

        .hero-glass::after {
            content: "";
            position: absolute;
            right: -40px;
            top: -40px;
            width: 150px;
            height: 150px;
            background: rgba(255,255,255,0.22);
            border-radius: 50%;
            filter: blur(6px);
        }
    .glass-card {
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 20px;
        padding: 28px;
        border: 1px solid rgba(255,255,255,0.65);
        box-shadow: 0 12px 35px rgba(0,0,0,0.10);
        transition: transform .25s ease, box-shadow .25s ease;
        text-align: center;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 55px rgba(0,0,0,0.18);
        }

        .glass-card h4 {
            font-weight: 600;
            margin-bottom: 10px;
        }

        .glass-card p {
            color: #555;
            font-size: 0.95rem;
            margin-bottom: 20px;
        }
    .pill-btn {
        border-radius: 50px;
        padding: 10px 24px;
        font-weight: 500;
        font-size: 1rem;
    }
</style>


<div class="container mt-4">
    <div class="hero-glass">
        <h1 class="fw-bold">Welcome, @username 👋</h1>
        <p class="mt-2">
            As a coordinator, you review lecturer submissions and approve or reject claims for your department.
        </p>
    </div>

    <div class="row justify-content-center mt-3">
        <div class="col-md-6">
            <div class="glass-card">
                <h4>📂 Manage Claims</h4>
                <p>View all submitted lecturer claims and take appropriate action.</p>

                <a href="/Coordinator/ClaimsList" class="btn btn-primary pill-btn">
                    Go to Claims List
                </a>
            </div>
        </div>
    </div>
</div>
