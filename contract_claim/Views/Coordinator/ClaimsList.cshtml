@model List<contract_claim.Models.Claim>
@{
    ViewData["Title"] = "Coordinator - Claims List";
    var total = Model.Count;
    var approved = Model.Count(c => c.Status == "Approved");
    var pending = Model.Count(c => c.Status == "Pending");
    var rejected = Model.Count(c => c.Status == "Rejected");
}

<div class="d-flex justify-content-around mb-4 text-center">
    <div class="p-3 bg-primary text-white rounded shadow-sm">
        <h5>Total</h5>
        <h3>@total</h3>
    </div>
    <div class="p-3 bg-warning text-dark rounded shadow-sm">
        <h5>Pending</h5>
        <h3>@pending</h3>
    </div>
    <div class="p-3 bg-success text-white rounded shadow-sm">
        <h5>Approved</h5>
        <h3>@approved</h3>
    </div>
    <div class="p-3 bg-danger text-white rounded shadow-sm">
        <h5>Rejected</h5>
        <h3>@rejected</h3>
    </div>
</div>

<div class="container mt-4">
    <h2 class="mb-4 text-center">Submitted Claims</h2>
    <a href="/Coordinator/Index" class="btn btn-outline-secondary">⬅ Back</a>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No claims have been submitted yet.</div>
    }
    else
    {
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalAmount.ToString("C")</td>
                        <td>@claim.Notes</td>
                        <td>
                            @if (!string.IsNullOrEmpty(claim.FileName))
                            {
                                <a href="/uploads/@claim.FileName" target="_blank" class="text-decoration-none">
                                    View
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>
                            <span class="fw-bold @(claim.Status == "Pending" ? "text-warning"
                                : claim.Status == "Approved" ? "text-success"
                                : "text-danger")">@claim.Status</span>
                        </td>
                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <form method="post" asp-action="Approve" class="d-inline" onsubmit="return confirmAction('approve');">
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                <form method="post" asp-action="Reject" class="d-inline ms-1" onsubmit="return confirmAction('reject');">
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            }
                            else
                            {
                                <span class="text-muted">Action taken</span>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>
