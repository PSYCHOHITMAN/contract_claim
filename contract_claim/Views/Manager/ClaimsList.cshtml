@model List<contract_claim.Models.Claim>

@{
    ViewData["Title"] = "Manager - Claims List";

    var role = Context.Session.GetString("Role");
    string backUrl = role switch
    {
        "Lecturer" => Url.Action("Index", "Lecturer"),
        "Coordinator" => Url.Action("Index", "Coordinator"),
        "Manager" => Url.Action("Index", "Manager"),
        "HR" => Url.Action("Index", "HR"),
        _ => Url.Action("Login", "Account")
    };
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>All Lecturer Claims</h2>
        <a href="@backUrl" class="btn btn-outline-secondary">⬅ Back</a>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">No claims have been submitted yet.</div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Lecturer Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate</th>
                    <th>Total Amount</th>
                    <th>Notes</th>
                    <th>Document</th>
                    <th>Status</th>
                    <th>Actions / Details</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.LecturerName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalAmount.ToString("C")</td>
                        <td>@claim.Notes</td>

                        <td>
                            @if (!string.IsNullOrEmpty(claim.FileName))
                            {
                                <a href="/uploads/@claim.FileName" target="_blank">View</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>

                        <td>
                            <span class="fw-bold
                                @(claim.Status == "Pending" ? "text-warning"
                                : claim.Status == "Approved" ? "text-success"
                                : "text-danger")">
                                @claim.Status
                            </span>
                        </td>

                        <td>
                            @if (claim.Status == "Pending")
                            {
                                <form method="post" asp-action="Approve" asp-controller="Manager" class="d-inline">
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-sm btn-success">Approve</button>
                                </form>

                                <form method="post" asp-action="Reject" asp-controller="Manager" class="d-inline">
                                    <input type="hidden" name="id" value="@claim.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                                </form>
                            }
                            else if (claim.Status == "Approved")
                            {
                                <span class="text-success fw-bold">Approved</span>
                                <br />
                                <small>Approved by: @claim.ApprovedBy</small>

                                <br />
                                <small>On: @claim.ApprovedDate?.ToString("yyyy-MM-dd HH:mm")</small>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span class="text-danger fw-bold">Rejected</span>
                                <br />
                                <small>Rejected by: @claim.ApprovedBy</small>

                                <br />
                                <small>On: @claim.ApprovedDate?.ToString("yyyy-MM-dd HH:mm")</small>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>
