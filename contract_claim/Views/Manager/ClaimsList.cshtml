@model List<contract_claim.Models.Claim> 

@{
    ViewData["Title"] = "Manager - Claims List";

    var role = Context.Session.GetString("Role");
    string backUrl = role switch
    {
        "Lecturer" => Url.Action("Index", "Lecturer"),
        "Coordinator" => Url.Action("Index", "Coordinator"),
        "Manager" => Url.Action("Index", "Manager"),
        "HR" => Url.Action("Index", "HR"),
        _ => Url.Action("Login", "Account")
    };
}

<style>
    .page-wrapper {
        max-width: 1200px;
        margin: 40px auto;
    }
    .hero-glass {
        background: linear-gradient(135deg, #4e73df, #1cc8ee);
        border-radius: 22px;
        padding: 30px 35px;
        color: white;
        margin-bottom: 35px;
        box-shadow: 0 20px 45px rgba(0,0,0,0.15);
        position: relative;
        overflow: hidden;
    }

    .hero-glass::after {
        content: "";
        position: absolute;
        right: -40px; top: -40px;
        width: 150px; height: 150px;
        background: rgba(255,255,255,0.23);
        border-radius: 50%;
        filter: blur(6px);
    }
    .glass-box {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        border-radius: 18px;
        padding: 25px;
        border: 1px solid rgba(255, 255, 255, .45);
        box-shadow: 0 12px 35px rgba(0,0,0,0.12);
        margin-bottom: 40px;
        transition: 0.25s ease;
    }
    .glass-box:hover {
        transform: translateY(-6px);
        box-shadow: 0 18px 55px rgba(0,0,0,0.18);
    }
    table thead {
        background: #343a40;
        color: white;
        border-radius: 12px;
    }

    table tbody tr:hover {
        background-color: rgba(0, 123, 255, .05);
    }
    .status-badge {
        padding: 6px 12px;
        border-radius: 50px;
        font-weight: 600;
        font-size: .85rem;
    }
    .pending { background: rgba(255,193,7,.2); color: #856404; }
    .approved { background: rgba(40,167,69,.2); color: #155724; }
    .rejected { background: rgba(220,53,69,.2); color: #721c24; }

    .pill-btn {
        border-radius: 50px;
        padding: 6px 14px;
        font-size: .85rem;
        font-weight: 500;
    }
</style>


<div class="page-wrapper">

    <div class="hero-glass d-flex justify-content-between align-items-center">
        <div>
            <h2 class="fw-bold">All Lecturer Claims</h2>
            <p class="mb-0">Review, Approve, or Reject claims across the institution.</p>
        </div>

    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info shadow-sm">@TempData["Message"]</div>
    }

    @if (!Model.Any())
    {
        <div class="glass-box text-center">
            <h5 class="text-muted">No claims have been submitted yet.</h5>
        </div>
    }
    else
    {
        <div class="glass-box">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Total</th>
                        <th>Notes</th>
                        <th>Document</th>
                        <th>Status</th>
                        <th style="min-width: 160px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.HoursWorked</td>
                            <td>R @claim.HourlyRate</td>
                            <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                            <td>@claim.Notes</td>

                            <td>
                                @if (!string.IsNullOrEmpty(claim.FileName))
                                {
                                    <a href="/uploads/@claim.FileName" target="_blank" class="text-primary fw-semibold">View</a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>

                            <td>
                                @if (claim.Status == "Pending")
                                {
                                    <span class="status-badge pending">Pending</span>
                                }
                                else if (claim.Status == "Approved")
                                {
                                    <span class="status-badge approved">Approved</span>
                                }
                                else
                                {
                                    <span class="status-badge rejected">Rejected</span>
                                }
                            </td>

                            <td>
                              
                                @if (claim.Status == "Pending")
                                {
                                    <form method="post" asp-action="Approve" asp-controller="Manager" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-success btn-sm pill-btn me-1">Approve</button>
                                    </form>

                                    <form method="post" asp-action="Reject" asp-controller="Manager" class="d-inline">
                                        <input type="hidden" name="id" value="@claim.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm pill-btn">Reject</button>
                                    </form>
                                }
                                else
                                {
                                    <div class="small text-muted">
                                        @claim.Status <br />
                                        by @claim.ApprovedBy <br />
                                        on @claim.ApprovedDate?.ToString("yyyy-MM-dd HH:mm")
                                    </div>
                                }
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>