@{
    ViewData["Title"] = "Manager Dashboard";
    var username = Context.Session.GetString("Username") ?? "Manager";
}

<style>
    /* ================================
           PAGE WRAPPER
        ================================ */
    .page-wrapper {
        max-width: 1050px;
        margin: 40px auto;
    }

    /* ================================
           HERO HEADER
        ================================ */
    .hero-glass {
        background: linear-gradient(135deg, #4e73df, #1cc8ee);
        color: white;
        padding: 34px 40px;
        border-radius: 24px;
        text-align: center;
        box-shadow: 0 20px 50px rgba(0,0,0,0.18);
        margin-bottom: 40px;
        position: relative;
        overflow: hidden;
    }

        .hero-glass::after {
            content: "";
            position: absolute;
            right: -40px;
            top: -40px;
            width: 160px;
            height: 160px;
            background: rgba(255,255,255,0.20);
            border-radius: 50%;
            filter: blur(6px);
        }

    /* ================================
           GLASS CARD
        ================================ */
    .glass-card {
        background: rgba(255,255,255,0.85);
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        padding: 28px;
        border-radius: 20px;
        border: 1px solid rgba(255,255,255,0.45);
        box-shadow: 0 10px 35px rgba(0,0,0,0.12);
        text-align: center;
        transition: 0.25s ease;
    }

        .glass-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 50px rgba(0,0,0,0.18);
        }

    /* ================================
           BUTTONS
        ================================ */
    .pill-btn {
        border-radius: 50px;
        padding: 10px 22px;
        font-size: 1rem;
        font-weight: 500;
        transition: 0.25s;
    }

        .pill-btn:hover {
            transform: translateY(-2px);
        }
</style>


<div class="page-wrapper">

    <!-- HERO -->
    <div class="hero-glass">
        <h2 class="fw-bold">Welcome, @username 👋</h2>
        <p class="mt-2">You have full oversight of all lecturer claims across the institution.</p>
    </div>


    <!-- SINGLE CARD SECTION -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-card">
                <h4 class="fw-bold mb-2">📑 Review All Claims</h4>
                <p class="text-muted mb-4">
                    View, approve, or reject lecturer submissions across all departments.
                </p>

                <a href="/Manager/ClaimsList" class="btn btn-primary pill-btn">
                    Go to All Claims
                </a>
            </div>
        </div>
    </div>
</div>
